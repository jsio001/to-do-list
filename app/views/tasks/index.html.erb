<h1>
  Tasklist: <%= @tasklist.name %>
</h1>
<h3>Tasks</h3>
<table class = "table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Due Date</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasklist.tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.due_date %></td>
        <td><%= task.status %></td>
        <td>
      </tr>
    <% end %>
  </tbody>
</table>

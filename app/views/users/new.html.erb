<h1 class='section-title text-center'>Sign Up</h1>

<%= link_to 'Back', root_path %>

<%= simple_form_for @user, url: signup_path, method: :post, html: {class: 'form-horizontal'} do |f| %>
<%= f.input :name, label: 'Username', error: @user.errors[:name] %>
<%= f.input :password, label: 'Password' %>
<%= f.input :password_confirmation, label: 'Password Confirmation', error: "Password doesn't match" %>
<%= f.button :submit, "Sign Up" %>
<% end %>
